javascript:(function(){
  const css = `
    @keyframes spinCrazy {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    body {
      animation: spinCrazy 0.5s linear infinite !important;
      transform-origin: 50% 50%;
    }
  `;
  const style = document.createElement('style');
  style.innerHTML = css;
  document.head.appendChild(style);
})();
